# config file for coherence
#
# keywords are case-sensitive

logmode = warning               # none, critical, error, warning, info, debug
#interface = eth0
#serverport = 12345             # if not specified coherence will use 30020

controlpoint = yes              # if set to yes coherence will activate its
                                # internal ControlPoint

[subsystem_log]
#Coherence = info
#SSDP = info
#MSEARCH = info
#SOAP = info
#Variable = info
#Event = info
#Service = info
#Device = info
#ConnectionManagerServer = info
#MediaServer= info
#MediaRenderer= info
#ControlPoint = info
#FlickrStore = info


[plugins]
    [[FSStore]]
        content = tests/content
        name = Coherence Test Content
    [[Player]]
        name = GStreamer Audio Player
    [[FlickrStore]]
        name = Flickr Images
        proxy = yes             # if set to yes coherence will fetch the images
                                #  from Flickr for your client
        refresh = 60            # check every 60 minutes with Flickr for new images in the set

